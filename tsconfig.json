{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "karin/*": [
        "src/*"
      ],
    },
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "strict": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  },
  "include": [
    "src/**/*",
    "modules.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}